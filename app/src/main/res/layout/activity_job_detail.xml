<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apex_gray">

    <!-- 1. HEADER FIJO (60dp) -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/apex_black"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón Atrás -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_right"
        android:rotation="180"
        app:tint="@color/apex_gold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalle de Vacante"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <!-- 2. CONTENIDO DESLIZABLE -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerBg"
        app:layout_constraintBottom_toTopOf="@id/layoutBottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp">

            <!-- LOGO FLOTANTE -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:src="@drawable/ic_jobs"
                    app:tint="@color/apex_black" />
            </androidx.cardview.widget.CardView>

            <!-- DATOS EMPRESA -->
            <TextView
                android:id="@+id/tvDetailCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Rappi Turbo"
                android:textColor="@color/apex_black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Conductor Zona Norte"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- SALARIO (Simplificado) -->
            <TextView
                android:id="@+id/tvDetailSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120.000 / día aprox."
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#E8F5E9"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"/>

            <!-- DESCRIPCIÓN DE ZONA Y REQUISITOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zona de Cobertura"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/apex_black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="El objetivo es cubrir la zona norte de la ciudad, entregando pedidos de restaurantes y farmacias en un radio de 3km."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requisitos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/apex_black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Moto modelo 2015 en adelante.\n• Licencia A2 vigente.\n• Celular Android con datos.\n• Disponibilidad inmediata."
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 3. BARRA INFERIOR FIJA -->
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Mensaje Éxito (Oculto) -->
        <LinearLayout
            android:id="@+id/layoutSuccessMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#E8F5E9"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            tools:visibility="visible">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                app:tint="#4CAF50"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡SOLICITUD ENVIADA!"
                android:textColor="#4CAF50"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnApplyFinal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="APLICAR AHORA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/apex_black"
            android:backgroundTint="@color/apex_gold"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>