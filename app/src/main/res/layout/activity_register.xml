<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apex_black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- ========================================== -->
        <!-- 1. ELEMENTOS DE FONDO (DECORATIVOS)        -->
        <!-- ========================================== -->

        <!-- Texto APEX (Diagonal /) -->
        <TextView
            android:id="@+id/tvBrandBgTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.04"
            android:text="APEX"
            android:textColor="@color/white"
            android:textSize="120sp"
            android:textStyle="bold"
            android:rotation="-35"
            android:translationX="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Texto VISION (Diagonal \) -->
        <TextView
            android:id="@+id/tvBrandBgBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.04"
            android:text="VISION"
            android:textColor="@color/apex_gold"
            android:textSize="120sp"
            android:textStyle="bold"
            android:rotation="35"
            android:translationX="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ========================================== -->
        <!-- 2. TÍTULOS SUPERIORES                      -->
        <!-- ========================================== -->

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÚNETE A APEX"
            android:textColor="@color/apex_gold"
            android:textSize="22sp"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRO DE CONDUCTOR"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:letterSpacing="0.2"
            android:alpha="0.6"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ========================================== -->
        <!-- 3. TARJETA DEL FORMULARIO                  -->
        <!-- ========================================== -->

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="60dp"
                android:paddingBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crear Cuenta"
                    android:textColor="@color/apex_black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completa tus datos"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- INPUT: NOMBRE -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Nombre Completo"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="@color/apex_gold"
                    app:hintTextColor="@color/apex_black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@android:drawable/ic_menu_myplaces"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/apex_gold"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- INPUT: EMAIL -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Correo Electrónico"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="@color/apex_gold"
                    app:hintTextColor="@color/apex_black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@android:drawable/ic_dialog_email"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/apex_gold"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/apex_black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- INPUT: USUARIO -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Nombre de Usuario"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="@color/apex_gold"
                    app:hintTextColor="@color/apex_black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@android:drawable/ic_menu_info_details"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/apex_gold"
                        android:textColor="@color/apex_black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- INPUT: TELÉFONO -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Celular (10 dígitos)"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="@color/apex_gold"
                    app:hintTextColor="@color/apex_black"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:counterTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@android:drawable/ic_menu_call"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/apex_gold"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/apex_black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- INPUT: CONTRASEÑA -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Contraseña"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxStrokeColor="@color/apex_gold"
                    app:hintTextColor="@color/apex_black"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@android:drawable/ic_lock_idle_lock"
                        android:drawablePadding="16dp"
                        android:drawableTint="@color/apex_gold"
                        android:inputType="textPassword"
                        android:textColor="@color/apex_black"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- REGLAS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:paddingStart="4dp">
                    <TextView
                        android:id="@+id/tvRuleLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Mínimo 8 caracteres"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvRuleUpper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Al menos una mayúscula"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvRuleNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Al menos un número"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tvRuleSpecial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Un carácter especial (@#$...)"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- BARRAS DE FORTALEZA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <View android:id="@+id/strengthBar1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#E0E0E0" android:layout_marginEnd="4dp"/>
                    <View android:id="@+id/strengthBar2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#E0E0E0" android:layout_marginEnd="4dp"/>
                    <View android:id="@+id/strengthBar3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#E0E0E0" android:layout_marginEnd="4dp"/>
                    <View android:id="@+id/strengthBar4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="#E0E0E0"/>
                </LinearLayout>

                <!-- BOTÓN -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="REGISTRARME"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/apex_black"
                    app:backgroundTint="@color/apex_gold"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ========================================== -->
        <!-- 4. LOGO FLOTANTE (BADGE)                   -->
        <!-- ========================================== -->

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="45dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/apex_black"
            app:layout_constraintStart_toStartOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="@id/cardContainer"
            app:layout_constraintTop_toTopOf="@id/cardContainer"
            app:layout_constraintBottom_toTopOf="@id/cardContainer">

            <!-- AQUÍ USAMOS TU IMAGEN REAL -->
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:padding="2dp"
                android:src="@drawable/apex_logo"
                app:shapeAppearanceOverlay="@style/CircleImageStyle" />

            <!-- Anillo Dorado -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle_border_gold"/>
        </androidx.cardview.widget.CardView>

        <!-- LINK A LOGIN -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ya tienes cuenta? "
                android:textColor="@color/white"
                android:alpha="0.7"/>

            <TextView
                android:id="@+id/tvGoToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia Sesión"
                android:textColor="@color/apex_gold"
                android:textStyle="bold"
                android:padding="8dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>