<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/ui_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/apex_gold"
    app:strokeWidth="1dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- Borde Dorado Lateral (Decorativo interno) -->
    <!-- Lo mantenemos porque le da un toque extra de "estado" -->
    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/apex_gold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/apex_gold"
            android:checked="true" />

        <!-- Información -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C.C. Santafé"
                    android:textColor="@color/ui_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Etiqueta de Estado -->
                <TextView
                    android:id="@+id/tvStatusTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#10000000"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="PENDIENTE"
                    android:textColor="@color/ui_text_primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cliente: Nike Store"
                android:textColor="@color/ui_text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Icono de "Ir" -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_play"
            app:tint="@color/ui_text_secondary"
            android:rotation="0"
            android:layout_marginStart="8dp"
            android:contentDescription="Ver detalles" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>