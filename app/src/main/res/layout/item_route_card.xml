<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/ui_surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/apex_gold"
    app:strokeWidth="1dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- Borde Dorado Lateral -->
    <View
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@color/apex_gold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Cabecera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="@color/apex_gold"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRouteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ui_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Ruta 1: Medellín Norte" />

                <TextView
                    android:id="@+id/tvRouteInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ui_text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    tools:text="Sector Bello / Niquía" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_divider"
            android:layout_marginVertical="16dp"/>

        <!-- Pie -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvOrderCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/apex_gold"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="15 Paradas" />

            <Button
                android:id="@+id/btnActivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECCIONAR"
                android:backgroundTint="@color/apex_black"
                android:textColor="@color/apex_gold"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>