<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/apex_gray"
    android:clickable="true"
    android:focusable="true">
    <!-- La lÃ­nea xmlns:app="http://schemas.android.com/apk/res-auto" ERA LA QUE FALTABA -->

    <!-- Header Negro y Dorado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/apex_black"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <!-- Icono decorativo -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_jobs"
            app:tint="@color/apex_gold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONVOCATORIAS DISPONIBLES"
            android:textColor="@color/apex_gold"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Lista de trabajos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerJobs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="20dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_job" />

</LinearLayout>