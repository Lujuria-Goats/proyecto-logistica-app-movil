<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background"> <!-- FONDO DINÁMICO -->

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ui_surface"
        android:padding="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:rotation="180"
            app:tint="@color/ui_text_primary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvRouteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUTA X"
            android:textColor="@color/apex_gold"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revisa las paradas antes de iniciar"
            android:textColor="@color/ui_text_secondary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Lista de Pedidos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRoutePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/btnActivateRoute"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_order" />

    <!-- BOTÓN INICIAR RUTA -->
    <Button
        android:id="@+id/btnActivateRoute"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/apex_gold"
        android:text="INICIAR ESTA RUTA"
        android:textColor="@color/apex_black"
        android:textStyle="bold"
        android:textSize="18sp"/>

</RelativeLayout>