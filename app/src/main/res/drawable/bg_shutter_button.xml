<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Círculo exterior (borde gris/transparente) -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="#FFFFFF"/>
            <solid android:color="#00000000"/> <!-- Transparente -->
            <size android:width="70dp" android:height="70dp"/>
        </shape>
    </item>

    <!-- Círculo interior (el botón blanco sólido) -->
    <!-- Le damos un margen (inset) para que quede más pequeño dentro del anillo -->
    <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>
